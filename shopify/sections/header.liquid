<renderless-layout-header v-slot="{ flag, handleClick }">
  <header class="container py-10 md:max-w-7xl">
    <div class="rounded-xl overflow-hidden relative">
      <div class="
          bg-gray-200 bg-opacity-80
          absolute
          top-0
          left-0
          right-0
          bottom-0
          filter
          blur-2xl
        "></div>
      <div class="p-6 md:p-10 relative z-10 cursor-pointer select-none" @click="handleClick">
        <div class="flex flex-wrap items-center justify-center">
          <div class="w-full md:w-2/3">
            <span v-text="$store.state['mobile-menu'].visible"></span>
            <p class="
                font-extrabold
                text-black text-3xl
                md:text-5xl
                transition-all
                duration-200
              " :class="!flag ? 'text-pink-600' : 'text-black'">
              Store.
              <span class="
                  text-gray-600 text-opacity-60
                  transition-all
                  duration-200
                " :class="
                  !flag ? 'text-lime-600 text-opacity-100' : 'text-gray-600'
                ">The best way to buy the products you love.</span>
            </p>
          </div>
          <div class="w-full md:w-1/3 pt-4 md:pt-0">
            <div class="flex flex-wrap justify-between md:block">
              <div>
                <div class="flex items-center">
                  
                  {% render 'icons', icon: 'academic-cap' %}
                  
                  <span class="text-pink-600 font-semibold">
                    Need shopping help?
                  </span>
                </div>
                <p>
                  <a class="
                      text-blue-600 text-sm
                      hover:text-blue-800 hover::underline
                    " href="">Ask a Specialist</a>
                </p>
              </div>
              <div class="md:pt-4">
                <div class="flex items-center">
                  {% render 'icons', icon: 'adjustments' %}
                  
                  <span class="text-lime-600 font-semibold">
                    Visit an Apple Store
                  </span>
                </div>
                <p>
                  <a class="
                      text-blue-600 text-sm
                      hover:text-blue-800 hover:underline
                    " href="">Find one near you</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </header>
  
  <div class="container mt-4 md:max-w-7xl">
    <div class="overflow-y-auto">
      <div class="flex items-center md:justify-end">
        <div class="text-center ml-8 first:ml-0 flex-shrink-0">
          <img
            src="https://store.storeimages.cdn-apple.com/4982/as-images.apple.com/is/store-card-13-mac-nav-202203?wid=200&hei=130&fmt=png-alpha&.v=1645051958490"
            width="120" height="120" alt=""/>
          <p class="mt-2">
            <a class="text-sm font-medium" href="">Mac</a>
          </p>
        </div>
        <div class="text-center ml-8 first:ml-0 flex-shrink-0">
          <img
            src="https://store.storeimages.cdn-apple.com/4982/as-images.apple.com/is/store-card-13-mac-nav-202203?wid=200&hei=130&fmt=png-alpha&.v=1645051958490"
            width="120" height="120" alt=""/>
          <p class="mt-2">
            <a class="text-sm font-medium" href="">Mac</a>
          </p>
        </div>
        <div class="text-center ml-8 first:ml-0 flex-shrink-0">
          <img
            src="https://store.storeimages.cdn-apple.com/4982/as-images.apple.com/is/store-card-13-mac-nav-202203?wid=200&hei=130&fmt=png-alpha&.v=1645051958490"
            width="120" height="120" alt=""/>
          <p class="mt-2">
            <a class="text-sm font-medium" href="">Mac</a>
          </p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="container pt-10 md:max-w-7xl">
    <h2 class="font-extrabold text-black text-xl md:text-2xl">
      The latest.
      <span class="text-gray-600 text-opacity-60">Take a look at whatâ€™s new, right now.</span>
    </h2>
    
    <div class="pt-4">
      <h1 class="text-blue-600 font-semibold text-2xl md:text-5xl">
        The best way to buy the products you love.
      </h1>
    </div>
  </div>
</renderless-layout-header>
